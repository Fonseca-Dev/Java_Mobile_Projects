<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Main_TextView_Titulo_Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Incluir Serie"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Main_TextView_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Título"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_TextView_Titulo_Activity" />

    <EditText
        android:id="@+id/Main_EditText_Titulo"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Título"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/Main_TextView_Titulo"
        app:layout_constraintTop_toBottomOf="@+id/Main_TextView_Titulo" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="176dp"
        android:onClick="exibir"
        android:text="Exibir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_EditText_Genero" />

    <TextView
        android:id="@+id/Main_TextView_Duracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Temporada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_EditText_Titulo" />

    <EditText
        android:id="@+id/Main_EditText_Temporada"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Temporada"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/Main_TextView_Duracao"
        app:layout_constraintTop_toBottomOf="@+id/Main_TextView_Duracao" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Avaliação"
        app:layout_constraintStart_toStartOf="@+id/Main_EditText_Temporada"
        app:layout_constraintTop_toBottomOf="@+id/Main_EditText_Temporada" />

    <EditText
        android:id="@+id/Main_EditText_Avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Avaliação"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gênero"
        app:layout_constraintStart_toStartOf="@+id/Main_EditText_Avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/Main_EditText_Avaliacao" />

    <EditText
        android:id="@+id/Main_EditText_Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Gênero"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:onClick="validar"
        android:text="Validar"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Finalizada?"
        app:layout_constraintStart_toStartOf="@+id/Main_EditText_Genero"
        app:layout_constraintTop_toBottomOf="@+id/Main_EditText_Genero" />

    <EditText
        android:id="@+id/Main_EditText_Finalizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint='"Sim" ou "Não"'
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>